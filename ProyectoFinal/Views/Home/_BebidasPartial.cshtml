        if (bebida.Marca == "Pepsi")
        {
                    <li class="grid-x align-middle">
                        <div class="cell auto">
                            @bebida.Nombre - Precio: @bebida.Precio
                        </div>
                        <div class="cell shrink">
                            <a asp-action="EditarBebida" asp-route-id="@bebida.Id" class="boton2 button secondary">Editar <i class="fa-solid fa-pencil"></i></a>
                        </div>
                        <div class="cell shrink">
                            <a asp-action="EliminarBebida" asp-route-id="@bebida.Id" class="boton2 button alert">Eliminar <i class="fa-solid fa-trash"></i></a>
