@model IEnumerable<Bebida>

<div class="text-center">
    <br />
    <h3>Refrescos:</h3>
    <hr />
</div>

<div class="grid-x grid-margin-x small-up-2 medium-up-3 large-up-3 align-center">
    <div class="cell">
        <ul class="pricing-table">
            <li class="title">Productos Pepsi</li>
            <li class="description">Bebidas desechables o en embace</li>
    @foreach (var bebida in Model )
