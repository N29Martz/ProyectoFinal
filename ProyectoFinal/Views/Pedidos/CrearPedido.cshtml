@model Pedido
@{
    ViewData["Title"] = "CrearPedido";
}

<div class="grid-container">

    <h2>@ViewData["Title"]</h2>

    <form asp-action="CrearPedido" class="form">
        <div asp-validation-summary="ModelOnly" class="texto-alerta"></div>

        <div class="">
            <label asp-for="Nombre" class="text"></label>
            <input asp-for="Nombre" class="input" />
            <span asp-validation-for="Nombre" class="texto-alerta"></span>
        </div>

        <div class="">
            <label asp-for="Cantidad" class="text"></label>
            <input asp-for="Cantidad" class="input" />
            <span asp-validation-for="Cantidad" class="texto-alerta"></span>
        </div>

        <div class="">
            <label asp-for="Entrega" class="text"></label>
            <select asp-for="Entrega" class="input">
                <option value=""></option>
                <option value="Pendiente">Pendiente</option>
                <option value="Entregado">Entregado</option>
            </select>
            <span asp-validation-for="Entrega" class="texto-alerta"></span>
        </div>

        <div class="">
            <label asp-for="Descripcion" class="text"></label>
            <input asp-for="Descripcion" class="input" />
            <span asp-validation-for="Descripcion" class="texto-alerta"></span>
        </div>

        <button type="submit" class="button boton">Guardar <i class="fa-solid fa-floppy-disk"></i></button>
        <a asp-action="Index" class="button secondary boton">Cancelar <i class="fa-solid fa-ban"></i></a>
    </form>

</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
